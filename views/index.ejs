<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="../stylesheet/index.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css">
    <title>To-Do App</title>
</head>

<ul class="nav">
    <li style="float:left"><a href="/">ToDo-App</a></li>
    <button onclick="logOut()" action="logOut" class="btn btn-success" style="float:right" type="submit" form="nameform"
        value="Submit"> Log-Out </button>
</ul>

<body>
    <div class="container">
        <div class="addTask">
            <input type="text" placeholder="What will you do today?" id="description">
            <button onclick="addToDo()" action="addToDo" class="add-button" type="submit" form="nameform"
                value="Submit">Add</button>
        </div>


        <div class="container">
            <ol class="Pending">
                <h3 id="pending">Pending</h3>
                <!-- Generated from Javascript -->
            </ol>
        </div>

        <div class="container">
            <ol class="Completed">
                <h3 id="completed">Completed</h3>
            </ol>
        </div>

        <button id="myBtn">Open Modal</button>

        <div id="myModal" class="modal">

            <div class="modal-content">
                <div class="modal-header">
                    <span class="close">&times;</span>
                    <h2>Update Task</h2>
                </div>
                <div class="modal-body">
                    <input type="text" placeholder="Update your task" id="pending">
                    <button onclick="updateToDo()" action="updateToDo" class="update-button" type="submit" form="nameform"
                        value="Submit">Update</button>             
            </div>
        </div>
        </div>

        <script>
            // Get the modal
            var modal = document.getElementById("myModal");

            // Get the button that opens the modal
            var btn = document.getElementById("myBtn");

            // Get the <span> element that closes the modal
            var span = document.getElementsByClassName("close")[0];

            // When the user clicks the button, open the modal 
            btn.onclick = function () {
                modal.style.display = "block";
            }

            // When the user clicks on <span> (x), close the modal
            span.onclick = function () {
                modal.style.display = "none";
            }

            // When the user clicks anywhere outside of the modal, close it
            window.onclick = function (event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }
        </script>

        <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

        <script src="../javascript/index.js"></script>
</body>

</html>